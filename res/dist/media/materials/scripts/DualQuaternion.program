	attach Ogre/DualQuaternionHardwareSkinningTwoWeightsCommon
	includes_skeletal_animation true
}

vertex_program Ogre/DualQuaternionHardwareSkinningTwoWeightsTwoPhaseShadowCasterGLSL glsl
